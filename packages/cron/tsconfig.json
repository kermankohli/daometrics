{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "sourceMap": true,
    "noUnusedLocals": false,
    "declaration": true,
    "outDir": "dist",
    "preserveSymlinks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node"]
  },
  "include": [
    "src",
    "types",
    "src/services",
    "utils"
  ],
  "compileOnSave": true
}